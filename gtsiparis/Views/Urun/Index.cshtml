@model IEnumerable<gtsiparis.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Grup.GrupAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maliyet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslangic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bitis)
        </th>
        <th>İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Grup.GrupAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Maliyet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baslangic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bitis)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-info", @style = "width: 70px" })
            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-warning", @style = "width: 70px" })
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "width: 70px" })
        </td>
    </tr>
}

</table>
